{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Community Server",
      "type": "shell",
      "command": "dart",
      "args": ["run", "bin/server.dart"],
      "options": {
        "cwd": "${workspaceFolder}/community_server"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      }
    },
    {
      "label": "Start Flutter App",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "flutter run -d chrome --web-port 7777 2>&1 | Where-Object { $_ -notmatch 'file_picker' -and $_ -notmatch 'Ask the maintainers' -and $_ -notmatch 'default_package' -and $_ -notmatch 'pluginClass' } | Select-String -NotMatch '^$|^Package' -AllMatches | Where-Object {$_.Matches.Count -gt 0}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start LearnEase App",
      "dependsOn": ["Start Community Server"],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      },
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "Flutter: Clean Run (No Warnings)",
      "type": "flutter",
      "command": "flutter",
      "args": [
        "run",
        "-d",
        "chrome",
        "--web-port",
        "7777"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
